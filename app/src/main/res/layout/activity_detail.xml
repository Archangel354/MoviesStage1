<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.moviesstage1.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
               android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPoster"
            android:layout_width="@dimen/posterHeight"
            android:layout_height="@dimen/posterWidth"
            android:layout_weight="1"
            android:theme="@style/MovieStyle"
            app:srcCompat="@mipmap/ic_launcher"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1.60"
            android:text="@string/movieTitle"
            android:textAlignment="viewEnd"
            android:theme="@style/MovieStyle"/>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:theme="@style/MovieStyle"
            android:hint="show title here"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtReleaseDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:text="Release Date:"
            android:textAlignment="viewEnd"
            android:theme="@style/MovieStyle"
           />

        <TextView
            android:id="@+id/txtReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:theme="@style/MovieStyle"
            android:hint="show date here"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtVoteAverageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:text="Vote Average:"
            android:textAlignment="viewEnd"
            android:theme="@style/MovieStyle"/>

        <TextView
            android:id="@+id/txtVoteAverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:theme="@style/MovieStyle"
            android:hint="show vote here"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtSynopsisLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Synopsis"
        android:textAlignment="center"
        android:theme="@style/MovieStyle"
        />

    <TextView
        android:id="@+id/txtSynopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MovieStyle"
        android:hint="show synopsis here"/>

    </LinearLayout>
</ScrollView>
